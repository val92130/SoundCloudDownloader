<Window x:Class="SoundCloudDownloader.app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Soundcloud Downloader" Height="600" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.png"/>
        </Grid.Background>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="65" Margin="0,10,0,0" VerticalAlignment="Top" Width="792" Opacity="0.7" IsHitTestVisible="True"/>
        <TextBox x:Name="urlTextBox" Height="23" Margin="0,20,0,527" TextWrapping="Wrap" Text="Soundcloud profile name" Width="503" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" RenderTransformOrigin="0.496,-0.13" UndoLimit="100000"/>
        <Button x:Name="downloadTrackButton" Content="Fetch" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" Width="75" Opacity="0.8" Click="downloadTrackButton_Click"/>

    </Grid>
</Window>
