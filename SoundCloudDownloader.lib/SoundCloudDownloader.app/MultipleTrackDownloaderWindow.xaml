<Window x:Class="SoundCloudDownloader.app.MultipleTrackDownloaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultipleTrackDownloaderWindow" Height="308" Width="382" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="background.png"/>
        </Grid.Background>
        <RichTextBox x:Name="textBoxLinks" HorizontalAlignment="Left" Height="166" Margin="10,94,0,0" VerticalAlignment="Top" Width="345" Grid.ColumnSpan="2"/>
        <Button x:Name="downloadButton" Content="Download" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="345" Height="38" Grid.ColumnSpan="2" Click="downloadButton_Click"/>

    </Grid>
</Window>
